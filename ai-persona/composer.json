{
    "name": "ai-persona/plugin",
    "type": "wordpress-plugin",
    "description": "Structured AI persona management for WordPress.",
    "license": "GPL-2.0-or-later",
    "autoload": {
        "psr-4": {
            "Ai_Persona\\": "includes/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "wp-phpunit/wp-phpunit": "^6.0",
        "yoast/phpunit-polyfills": "^2"
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml.dist",
        "test:wpunit": "WP_PHPUNIT__DIR=vendor/wp-phpunit/wp-phpunit WP_PHPUNIT__TESTS_CONFIG=tests/wpunit/wp-tests-config.php phpunit -c tests/wpunit/phpunit.xml.dist"
    }
}
